@model Product

<div class="col-6">
    <div class="card shadow mb-4">
        <div class="card-body">

            <h2>
                <img src="~/img/@Model.Image" style="width:400px;height:180px;object-fit:cover" />
            </h2>
            <h2>@Model.Name</h2>
            <p>@Model.Price</p>
            <a class="btn btn-secondary text-white mr-2" asp-action="Index">Go Back</a>

        </div>
    </div>
</div>


